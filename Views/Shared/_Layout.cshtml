@{
    //ViewContext.HttpContext.Session.TryGetValue("name");
    bool flag = ViewContext.HttpContext.Request.Cookies.ContainsKey("name");

    string admin = "";
    if(ViewContext.HttpContext.Request.Cookies.ContainsKey("admin"))
    {
        //admin = ViewContext.HttpContext.Session.GetString("admin");
        admin =  ViewContext.HttpContext.Request.Cookies["admin"];
    }

    string name = "";
    if(flag)
    {
        name = ViewContext.HttpContext.Request.Cookies["name"];

    }
}


