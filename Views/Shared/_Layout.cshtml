            <div id="chat-circle" class="btn btn-raised">
                <div id="chat-overlay";></div>
                <img src="/chatbot.png" id="chatbot-img" />
            </div>

            <div class="chat-box">
                <div class="chat-box-header">
                ChatBot
                    <span class="chat-box-toggle"><i class="material-icons">close</i></span>
                </div>
                <div class="chat-box-body">
                    <div class="chat-box-overlay chat-logs">   </div>
                        <ul id="messagesList">
                         </ul>
                </div>
                <div class="chat-input">      
                <form>
                    <input type="text" id="chat-input" placeholder="Send a message..." autocomplete="off"/>
                    <button type="submit" class="chat-submit" id="chat-submit"><i class="material-icons" style="color:#feb445;margin-right:10px">send</i></button>
                </form>      
            </div>
        </div>
    @RenderBody()


