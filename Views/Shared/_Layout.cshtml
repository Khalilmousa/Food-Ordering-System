<body>
    <nav>
        <ul>
            @if(admin !="")
            {
                <h1 id="foodDash"><a href="/Admin/Index" style="text-decoration: none;color: rgb(235, 140, 16)">Admin Panel</a></h1>

            }
            else
            {
                
            <h1 id="foodDash"><a href="/" style="text-decoration: none;color: rgb(235, 140, 16)">FoodDash</a></h1>
            }
            <div id="header-items">
                @if(admin !="")
                {
                    <li class="header-item underline"><a href="/Admin/Logout" class="noscroll">Logout</a></li>

                }
                else
                {
                    
                
                <li class="header-item underline"><a href="/Home/Services" class="noscroll">Services</a></li>
                    <li class="header-item underline"><a href="/Home/AboutUs" class="noscroll">About Us</a></li>
                    <li class="header-item underline"><a href="/Home/Faq" class="noscroll">FAQs</a></li>

                    @if(name != "")
                    {
                        <li class="header-item underline"><a href="/Logout/Logout" class="noscroll">Logout</a></li>

                    }
                    else
                    {
                      <li class="header-item underline"><a href="/Login/Login" class="noscroll">Login</a></li>
                      <li class="header-item underline"><a href="/Register/Register" class="noscroll">Register</a></li>
                    }
            
            }
            </div>
        </ul>
    </nav>

    
        <div id="body" style="z-index:100"> 
